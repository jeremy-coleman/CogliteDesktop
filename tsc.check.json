{
    "compilerOptions": {
        "outDir": "dist_check",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2017",
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "package.json": ["../package.json"]
        },
        "lib": ["dom", "es5", "scripthost", "es2015"],
        "skipLibCheck":true
    },
    "include":["src"],
    "exclude":["node_modules"]
}